<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ActionIA.MainPage">
   
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center">

            <!-- Selección de idioma -->
            <HorizontalStackLayout Spacing="10">
                <Picker x:Name="FromLangPicker" Title="De:" WidthRequest="150" FontFamily="Balatro"/>
                <Button Text="Cambiar" Clicked="OnSwapClicked" FontFamily="Balatro"/>
                <Picker x:Name="ToLangPicker" Title="A:" WidthRequest="150" FontFamily="Balatro"/>
            </HorizontalStackLayout>

            <!-- Entrada de texto / voz -->
            <Editor x:Name="InputEditor" HeightRequest="100" Placeholder="Escribe o usa el micrófono..." FontFamily="Balatro" FontSize="18"/>

            <!-- Botones -->
            <HorizontalStackLayout Spacing="10">
                <Button Text="Hablar" Clicked="OnListenClicked" FontFamily="Balatro"/>
                <Button Text="Traducir" Clicked="OnTranslateClicked" FontFamily="Balatro"/>
            </HorizontalStackLayout>

            <!-- Resultado -->
            <Label Text="Traducción:" FontAttributes="Bold" FontFamily="Balatro"/>
            <Editor x:Name="OutputEditor" HeightRequest="100" IsReadOnly="True" FontFamily="Balatro" FontSize="18" Placeholder="Texto Traducido...."/>

            <!-- Botón de leer en voz alta -->
            <Button Text="🔊 Escuchar traducción" Clicked="OnSpeakClicked" FontFamily="Balatro"/>
        </VerticalStackLayout>


    </ScrollView>

</ContentPage>
